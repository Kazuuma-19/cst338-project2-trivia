<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayGameActivity">

    <RadioButton
        android:id="@+id/choiceB"
        android:layout_width="365dp"
        android:layout_height="150dp"
        android:hint="@string/prompt_b_goes_here"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choiceA"
        app:layout_constraintVertical_bias="0.003" />

    <RadioButton
        android:id="@+id/choiceC"
        android:layout_width="365dp"
        android:layout_height="150dp"
        android:hint="@string/prompt_c_goes_here"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choiceB"
        app:layout_constraintVertical_bias="0.0" />

    <RadioButton
        android:id="@+id/choiceA"
        android:layout_width="365dp"
        android:layout_height="150dp"
        android:text=""
        android:hint="@string/prompt_A_goes_here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionTitle"
        app:layout_constraintVertical_bias="0.029" />

    <TextView
        android:id="@+id/questionTitle"
        android:layout_width="264dp"
        android:layout_height="112dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="@string/question_prompt"
        android:text=""
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choiceC" />

</androidx.constraintlayout.widget.ConstraintLayout>